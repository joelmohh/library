<%- include('sidebar') %>
    <div class="container main-content books-page">

        <h1>Manage Lendings</h1>
        <button class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#lendingModal"><i
                class="fa-solid fa-plus"></i> New Lending</button>

        <div class="search-box">
            <div class="search-fields mb-3">
                <input type="text" id="searchInputLendings" class="form-control search-field"
                    placeholder="Search by book, student, or date">
                <button id="searchBtnLendings" class="btn btn-secondary"><i class="fa-solid fa-magnifying-glass"></i>
                    Search</button>
            </div>

            <div class="books-render">
                <table class="table" id="lendingsTable">
                    <thead>
                        <tr>
                            <th scope="col">Book</th>
                            <th scope="col">Student</th>
                            <th scope="col">Lending Date</th>
                            <th scope="col">Return Date</th>
                            <th scope="col">Status</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                        <% if (lendings.total===0) { %>
                            <tr>
                                <td colspan="6" class="text-center">No lending found.</td>
                            </tr>
                            <% } else { %>
                                <% const today=new Date(); %>

                                    <% lendings.list.forEach(function(lending) { const lendDate=new
                                        Date(lending.lendDate); const returnDate=lending.returnDate ? new
                                        Date(lending.returnDate) : null; const isPast=(date)=> date && date.getTime() <
                                            today.getTime(); const formatDate=(date)=> {
                                            const day = String(date.getUTCDate()).padStart(2, '0');
                                            const month = String(date.getUTCMonth() + 1).padStart(2, '0');
                                            const year = date.getUTCFullYear();
                                            return `${day}/${month}/${year}`;
                                            };
                                            %>
                                            <tr class="item">
                                                <td>
                                                    <%= lending.book.title %>
                                                </td>
                                                <td>
                                                    <%= lending.user.name %>
                                                </td>
                                                <td>
                                                    <%= formatDate(lendDate) %>
                                                </td>
                                                <td>
                                                    <% if (returnDate) { %>
                                                        <%= formatDate(returnDate) %>
                                                            <% } %>
                                                </td>
                                                <td>
                                                    <% if (lending.returned) { %>
                                                        <span class="btn btn-sm text-light bg-success">Returned</span>
                                                        <% } else if (returnDate && isPast(returnDate)) { %>
                                                            <span
                                                                class="btn btn-sm text-light bg-danger">Expired</span>
                                                            <% } else { %>
                                                                <span
                                                                    class="btn btn-sm text-dark bg-warning">Lent</span>
                                                                <% } %>
                                                </td>
                                                <% if (!lending.returned) { %>
                                                <td class="action-buttons">
                                                    <button class="btn btn-sm btn-primary btn-edit returnLendingBtn" data-item='<%= JSON.stringify(lending.id).replace(", ", "") %>'> <i class="fa-solid fa-rotate-left"></i></button>
                                                    <button class="btn btn-sm btn-success extendLendingBtn" data-bs-target="#extendLendingModal" data-bs-toggle="modal" data-item="<%= JSON.stringify(lending.id) %>"><i class="fa-solid fa-clock"></i></button>
                                                </td>
                                                <% } else { %>
                                                <td class="action-buttons">
                                                    <button class="btn btn-sm btn-disabled" disabled><i class="fa-solid fa-rotate-left"></i></button>
                                                    <button class="btn btn-sm btn-danger deleteLendingBtn" data-item="<%= JSON.stringify(lending.id) %>"><i class="fa-solid fa-trash"></i></button>
                                                </td>

                                                <% } %>
                                            </tr>
                                            <% }); %>
                                                <% } %>


                    </tbody>
                </table>
            </div>

            <div class="pagination-wrapper">
                <div class="items-controller">
                    <label for="rowsPerPage">Itens por p√°gina:</label>
                    <select class="form-select" id="rowsPerPage">
                        <option value="10" selected>10</option>
                        <option value="20">20</option>
                        <option value="50">50</option>
                    </select>
                </div>

                <nav aria-label="Page navigation">
                    <ul class="pagination mb-0" id="paginationContainer">
                        <li class="page-item" id="btn-prev">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true"><i class="fa-solid fa-angles-left"></i></span>
                            </a>
                        </li>

                        <div id="page-numbers" style="display: flex;"></div>

                        <li class="page-item" id="btn-next">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true"><i class="fa-solid fa-angles-right"></i></span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            initTablePagination('tableBody', 'rowsPerPage', 'paginationContainer', 'btn-prev', 'btn-next');
            initTableSearch('searchInputBooks', 'searchBtnBooks', 'tableBody');
        });
    </script>

    <%- include('../partials/footer') %>