<%- include('sidebar') %>
    <div class="container main-content books-page">

        <h1>Gerenciar Categorias</h1>
        <button class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#categoryModal"><i
                class="fa-solid fa-plus"></i> Nova Categoria</button>

        <div class="search-box">
            <div class="search-fields mb-3">
                <input type="text" id="searchInputCategories" class="form-control search-field"
                    placeholder="Search by livro, estudante, ou data">
                <button id="searchBtnCategories" class="btn btn-secondary"><i class="fa-solid fa-magnifying-glass"></i>
                    Search</button>
            </div>

            <div class="books-render">
                <table class="table" id="categoriesTable">
                    <thead>
                        <tr>
                            <th scope="col">Nome</th>
                            <th scope="col">Ações</th>
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                        <% if (categories.total===0) { %>
                            <tr>
                                <td colspan="4" class="text-center">Nenhuma categoria encontrada.</td>
                            </tr>
                            <% } else { %>
                                <% categories.list.forEach(function(category) { %>
                                    <tr class="item">
                                        <td>
                                            <%= category.name %>
                                        </td>
                                        <td class="action-buttons">
                                            <button class="btn btn-sm btn-primary btn-edit" data-bs-toggle="modal"
                                                data-bs-target="#categoryModal"
                                                data-bs-item='<%= JSON.stringify(category) %>'>
                                                <i class="fa-solid fa-pen-to-square"></i>
                                            </button>
                                            <button class="btn btn-sm btn-danger btn-delete" data-type="category"
                                                data-id="<%= category._id %>">
                                                <i class="fa-solid fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <% } %>
                    </tbody>
                </table>
            </div>

            <div class="pagination-wrapper">
                <div class="items-controller">
                    <label for="rowsPerPage">Itens por página:</label>
                    <select class="form-select" id="rowsPerPage">
                        <option value="10" selected>10</option>
                        <option value="20">20</option>
                        <option value="50">50</option>
                    </select>
                </div>

                <nav aria-label="Page navigation">
                    <ul class="pagination mb-0" id="paginationContainer">
                        <li class="page-item" id="btn-prev">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true"><i class="fa-solid fa-angles-left"></i></span>
                            </a>
                        </li>

                        <div id="page-numbers" style="display: flex;"></div>

                        <li class="page-item" id="btn-next">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true"><i class="fa-solid fa-angles-right"></i></span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            initTablePagination('tableBody', 'rowsPerPage', 'paginationContainer', 'btn-prev', 'btn-next');
            initTableSearch('searchInputBooks', 'searchBtnBooks', 'tableBody');
        });
    </script>

    <%- include('../partials/footer') %>