<%- include('sidebar') %>
<div class="container main-content">
    <div class="profileContainer">
        <h2>Perfil do Usuário</h2>
        <div class="profile-details">
            <form id="updateProfile">
                <div class="form-group">
                    <label for="name">Nome:</label>
                    <input type="text" id="name" class="form-control" value="<%= currentUser.name %>">
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" class="form-control" value="<%= currentUser.email %>">
                </div>
                <div class="form-group">
                    <label for="password">Senha:</label>
                    <input type="password" id="password" class="form-control" >
                </div>
                <div class="form-group">
                    <label for="type">Usuário:</label>
                    <input type="text" id="username" class="form-control" >
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-secondary mt-2">Atualizar Perfil</button>
                </div>
            </form>
        </div>
    </div>

</div>

</div>
<script src="/js/actions/profile.js"></script>

<%- include('../partials/footer') %>