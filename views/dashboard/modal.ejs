<!-- 

    Lending Modals

-->

<div class="modal fade" id="lendingModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5">Novo Empréstimo</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="lendingForm">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Livro</label>
                    <select class="form-control" name="books" id="newLendingBook">
                            <option selected>Selecione um livro</option>
                        <% books.list.forEach(function(book) { %>
                            <option value="<%= book._id %>"><%= book.title %></option>
                        <% }); %>
                    </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Aluno</label>
                        <select class="form-control" name="users" id="newLendingUser">
                            <option selected>Selecione um usuário</option>
                            <% users.list.forEach(function(user) { %>
                                <option value="<%= user._id %>"><%= user.name %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Data de Devolução</label>
                        <input type="date" id="newLendingReturnDate" name="returnDate" class="form-control" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                    <button type="button" id="newLendingBtn" class="btn btn-primary">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>

