<div class="modal fade" id="bookModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="bookModalLabel">Livro</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="bookForm">
                <div class="modal-body">
                    <input type="hidden" name="id" id="book_id">
                    <div class="mb-3"><label class="form-label">Título</label><input type="text" name="title"
                            id="book_title" class="form-control" required></div>
                    <div class="mb-3"><label class="form-label">Categoria</label><input type="text" name="category"
                            id="book_category" class="form-control" required></div>
                    <div class="mb-3"><label class="form-label">Autor</label><input type="text" name="author"
                            id="book_author" class="form-control" required></div>
                    <div class="row">
                        <div class="col"><label class="form-label">ISBN</label><input type="text" name="isbn"
                                id="book_isbn" class="form-control" required></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="userModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5">Usuário</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="userForm">
                <div class="modal-body">
                    <input type="hidden" name="id" id="user_id">
                    <div class="mb-3"><label class="form-label">Nome</label><input type="text" name="name"
                            id="user_name" class="form-control" required></div>
                    <div class="mb-3"><label class="form-label">Username</label><input type="text" name="username"
                            id="user_username" class="form-control" required></div>
                    <div class="mb-3"><label class="form-label">Email</label><input type="email" name="email"
                            id="user_email" class="form-control" required></div>
                    <div class="mb-3" id="pass_group"><label class="form-label">Senha</label><input type="password"
                            name="password" id="user_password" class="form-control"></div>
                    <div class="mb-3">
                        <label class="form-label">Tipo</label>
                        <select name="type" id="user_type" class="form-select">
                            <option value="student">Estudante</option>
                            <option value="admin">Admin</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/js/actions/lending.js"></script>
<div class="modal fade" id="lendingModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5">Empréstimo</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="lendingForm">
                <div id="lendingCreateForm">

                    <div class="modal-body">
                        <input type="hidden" name="id" id="lending_id">
                        <div class="mb-3">
                            <label for="form-label">Livro</label><select name="books" id="bookId" class="form-select"
                                required>
                                <option value="" disabled selected>Selecione um livro</option>
                                <% books.list.forEach(function(book) { %>
                                    <option value="<%= book._id %>">
                                        <%= book.title %> - <%= book.author %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="form-label">Estudante</label><select name="students" id="studentId"
                                class="form-select" required>
                                <option value="" disabled selected>Selecione um estudante</option>
                                <% users.list.forEach(function(user) { %>
                                    <option value="<%= user._id %>">
                                        <%= user.name %> - <%= user.email %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                        <div class="mb-3"><label class="form-label">Data Devolução</label><input type="date"
                                name="returnDate" id="lending_returnDate" class="form-control"></div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Fechar</button>
                        <button type="button" class="btn btn-secondary" id="lendingCreateButton">Salvar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
