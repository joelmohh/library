<%- include('sidebar') %>
    <div class="container main-content books-page">


        <% if( page=='students' ){ %>
            <h1>Manage Students</h1>
            <button class="btn btn-secondary btn-add" data-bs-toggle="modal" data-bs-target="#newStudentModal">
                <i class="fa-solid fa-plus"></i> New Student
            </button>
            <% } else if( page=='teachers' ){ %>
                <h1>Manage Teachers</h1>
                <button class="btn btn-secondary btn-add" data-bs-toggle="modal" data-bs-target="#newTeacherModal">
                    <i class="fa-solid fa-plus"></i> New Teacher
                </button>
                <% } %>
                    <div class="search-box">
                        <div class="search-fields mb-3">
                            <input type="text" id="searchInputUsers" class="form-control search-field"
                                placeholder="Search by name, email, or role">
                            <button id="searchBtnUsers" class="btn btn-secondary"><i
                                    class="fa-solid fa-magnifying-glass"></i>
                                Search</button>
                        </div>

                        <div class="books-render">
                            <table class="table" id="lendingsTable">
                                <thead>
                                    <tr>
                                        <th scope="col">Name</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Username</th>
                                        <th scope="col" style="width: 10rem; text-align: center;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="tableBody">
                                    <% if (users.total===0) { %>
                                        <tr>
                                            <td colspan="4" class="text-center">No users found.</td>
                                        </tr>
                                        <% } else { %>
                                            <% users.list.forEach(function(user) { %>
                                                <tr class="item">
                                                    <td>
                                                        <%= user.name %>
                                                    </td>
                                                    <td>
                                                        <%= user.email %>
                                                    </td>
                                                    <td>
                                                        <%= user.username %>
                                                    </td>
                                                    <td class="action-buttons">
                                                        <button class="btn btn-sm btn-primary editUserBtn"
                                                            data-bs-toggle="modal" data-bs-target="#editUserModal"
                                                            data-bs-item='<%= JSON.stringify(user) %>'>
                                                            <i class="fa-solid fa-pen-to-square"></i>
                                                        </button>
                                                        <button class="btn btn-sm btn-danger deleteUserBtn"
                                                            data-type="user" data-id="<%= user._id %>">
                                                            <i class="fa-solid fa-trash"></i>
                                                        </button>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                                    <% } %>
                                </tbody>
                            </table>
                        </div>

                        <div class="pagination-wrapper">
                            <div class="items-controller">
                                <label for="rowsPerPage">Items per page:</label>
                                <select class="form-select" id="rowsPerPage">
                                    <option value="10" selected>10</option>
                                    <option value="20">20</option>
                                    <option value="50">50</option>
                                </select>
                            </div>

                            <nav aria-label="Page navigation">
                                <ul class="pagination mb-0" id="paginationContainer">
                                    <li class="page-item" id="btn-prev">
                                        <a class="page-link" href="#" aria-label="Previous">
                                            <span aria-hidden="true"><i class="fa-solid fa-angles-left"></i></span>
                                        </a>
                                    </li>

                                    <div id="page-numbers" style="display: flex;"></div>

                                    <li class="page-item" id="btn-next">
                                        <a class="page-link" href="#" aria-label="Next">
                                            <span aria-hidden="true"><i class="fa-solid fa-angles-right"></i></span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            initTablePagination('tableBody', 'rowsPerPage', 'paginationContainer', 'btn-prev', 'btn-next');
            initTableSearch('searchInputUsers', 'searchBtnUsers', 'tableBody');
        });
    </script>

    <%- include('../partials/footer') %>