<%- include('sidebar') %>
    <div class="container main-content books-page">


        <% if( page=='students' ){ %>
            <h1>Gerenciar Estudantes</h1>
            <button class="btn btn-secondary btn-add" data-bs-toggle="modal" data-bs-target="#userModal">
                <i class="fa-solid fa-plus"></i> Novo Estudante
            </button>
            <% } else if( page=='teachers' ){ %>
                <h1>Gerenciar Professores</h1>
                <button class="btn btn-secondary btn-add" data-bs-toggle="modal" data-bs-target="#userModal">
        <i class="fa-solid fa-plus"></i> Novo Professore
    </button>
                <% } else if(page==='rooms' ){ %>
                    <h1>Gerenciar Salas</h1>
                    <button class="btn btn-secondary btn-add" data-bs-toggle="modal" data-bs-target="#userModal">
        <i class="fa-solid fa-plus"></i> Nova Sala
    </button>
                    <% } %>
                        <div class="search-box">
                            <div class="search-fields mb-3">
                                <input type="text" id="searchInputUsers" class="form-control search-field"
                                    placeholder="Search por nome, email, ou função">
                                <button id="searchBtnUsers" class="btn btn-secondary"><i
                                        class="fa-solid fa-magnifying-glass"></i>
                                    Search</button>
                            </div>

                            <div class="books-render">
                                <table class="table" id="lendingsTable">
                                    <thead>
                                        <tr>
                                            <th scope="col">Nome</th>
                                            <th scope="col">Email</th>
                                            <th scope="col">Função</th>
                                            <th scope="col" style="width: 10rem; text-align: center;">Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody id="tableBody">
                                        <% if (users.total===0) { %>
                                            <tr>
                                                <td colspan="4" class="text-center">Nenhum usuário encontrado.</td>
                                            </tr>
                                            <% } else { %>
                                                <% users.list.forEach(function(user) { %>
                                                    <tr class="item">
                                                        <td>
                                                            <%= user.name %>
                                                        </td>
                                                        <td>
                                                            <%= user.email %>
                                                        </td>
                                                        <td>
                                                            <%= user.type.charAt(0).toUpperCase() + user.type.slice(1)
                                                                %>
                                                        </td>
                                                        <td class="action-buttons">
                                                            <button class="btn btn-sm btn-primary btn-edit"
                                                                data-bs-toggle="modal" data-bs-target="#userModal"
                                                                data-bs-item='<%= JSON.stringify(user) %>'>
                                                                <i class="fa-solid fa-pen-to-square"></i>
                                                            </button>
                                                            <button class="btn btn-sm btn-danger btn-delete"
                                                                data-type="user" data-id="<%= user._id %>">
                                                                <i class="fa-solid fa-trash"></i>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                    <% }); %>
                                                        <% } %>
                                    </tbody>
                                </table>
                            </div>

                            <div class="pagination-wrapper">
                                <div class="items-controller">
                                    <label for="rowsPerPage">Itens por página:</label>
                                    <select class="form-select" id="rowsPerPage">
                                        <option value="10" selected>10</option>
                                        <option value="20">20</option>
                                        <option value="50">50</option>
                                    </select>
                                </div>

                                <nav aria-label="Page navigation">
                                    <ul class="pagination mb-0" id="paginationContainer">
                                        <li class="page-item" id="btn-prev">
                                            <a class="page-link" href="#" aria-label="Previous">
                                                <span aria-hidden="true"><i class="fa-solid fa-angles-left"></i></span>
                                            </a>
                                        </li>

                                        <div id="page-numbers" style="display: flex;"></div>

                                        <li class="page-item" id="btn-next">
                                            <a class="page-link" href="#" aria-label="Next">
                                                <span aria-hidden="true"><i class="fa-solid fa-angles-right"></i></span>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            initTablePagination('tableBody', 'rowsPerPage', 'paginationContainer', 'btn-prev', 'btn-next');
            initTableSearch('searchInputUsers', 'searchBtnUsers', 'tableBody');
        });
    </script>

    <%- include('../partials/footer') %>